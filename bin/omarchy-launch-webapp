#!/usr/bin/env bash

browser=$(xdg-settings get default-web-browser)

case $browser in
google-chrome* | brave-browser* | microsoft-edge* | opera* | vivaldi* | helium*) ;;
*) browser="google-chrome.desktop" ;;
esac

exec setsid uwsm-app -- $(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,~/.nix-profile,/etc/profiles/per-user/$(whoami),/usr,}/share/applications/$browser 2>/dev/null | head -1) --app="$1" "${@:2}"

